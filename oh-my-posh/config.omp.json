{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "palette": {
    "battery:discharging": "p:danger",
    "battery_charging": "p:primary",
    "battery_foreground": "p:warning",
    "battery_full": "p:success",
    "danger": "red",
    "elixir": "#b4a2be",
    "git": "p:idle",
    "git_ahead": "p:success",
    "git_behind": "p:primary",
    "git_changed": "p:warning",
    "git_unsynced": "magenta",
    "idle": "cyan",
    "node": "#8cc84b",
    "os": "p:white",
    "path": "p:primary",
    "primary": "blue",
    "prompt": "p:primary",
    "python": "#4584b6",
    "rust": "#ce422b",
    "secondary_prompt": "p:cyan",
    "session_root": "p:danger",
    "session_user": "p:idle",
    "success": "green",
    "time": "p:idle",
    "transient_prompt": "p:green",
    "warning": "yellow",
    "white": "white"
  },
  "secondary_prompt": {
    "template": "❯❯",
    "foreground": "p:secondary_prompt"
  },
  "transient_prompt": {
    "template": "❯",
    "foreground": "p:transient_prompt",
    "foreground_templates": [
      "{{ if gt .Code 0 }}p:danger{{ end }}"
    ]
  },
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u250c ",
          "foreground": "p:white",
          "type": "text",
          "style": "plain"
        },
        {
          "template": "{{ if .SSHSession }}\ueba9 {{ end }}{{ if .Root }}\uf0e7{{ else }}\ueb99{{ end }} ",
          "type": "session",
          "style": "plain",
          "foreground_templates": [
            "{{ if .Root }}p:session_root{{ else }}p:session_user{{ end }}"
          ]
        },
        {
          "type": "path",
          "options": {
            "style": "full"
          },
          "template": "{{ .Path }}",
          "foreground": "p:path",
          "style": "plain"
        },
        {
          "options": {
            "fetch_bare_info": true,
            "fetch_status": true,
            "fetch_push_status": true
          },
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "p:git",
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:git_changed{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git_unsynced{{ end }}",
            "{{ if gt .Ahead 0 }}p:git_ahead{{ end }}",
            "{{ if gt .Behind 0 }}p:git_behind{{ end }}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "type": "battery",
          "template": "{{ if not .Error }}{{ if eq \"Charging\" .State.String }}\uf0e7{{ else if eq \"Discharging\" .State.String }}\uf242{{ else if eq \"Full\" .State.String }}\uf240{{ else }}\uf243{{ end }} {{ .Percentage }}%{{ end }}",
          "foreground": "p:battery_foreground",
          "style": "plain",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}p:battery_charging{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:battery:discharging{{end}}",
            "{{if eq \"Full\" .State.String}}p:battery_full{{end}}"
          ]
        },
        {
          "type": "time",
          "style": "plain",
          "template": " \uf017 {{ .CurrentDate | date \"15:04:05\" }} ",
          "foreground": "p:time"
        },
        {
          "options": {
            "macos": "\uf179 ",
            "raspbian": "\uf315 ",
            "ubuntu": "\uf31b "
          },
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "foreground": "p:os",
          "type": "os",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u2514 ",
          "foreground": "p:white",
          "type": "text",
          "style": "plain"
        },
        {
          "template": "\ue718 {{ .Full }} ",
          "foreground": "p:node",
          "type": "node",
          "style": "plain"
        },
        {
          "template": "\ue62d {{ .Full }} ",
          "foreground": "p:elixir",
          "type": "elixir",
          "style": "plain"
        },
        {
          "template": "\ue7a8 {{ .Full }} ",
          "foreground": "p:rust",
          "type": "rust",
          "style": "plain"
        },
        {
          "options": {
            "display_mode": "files"
          },
          "template": "\ue235{{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }} {{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "foreground": "p:python",
          "type": "python",
          "style": "plain"
        },
        {
          "template": "❯",
          "foreground": "p:prompt",
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:danger{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ]
}