{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "palette": {
    "white": "white",
    "primary": "blue",
    "success": "green",
    "idle": "cyan",
    "warning": "yellow",
    "danger": "red",
    "os:foreground": "p:white",
    "prompt:foreground": "p:primary",
    "path:foreground": "p:primary",
    "battery:foreground": "p:warning",
    "battery:charging": "p:primary",
    "battery:discharging": "p:danger",
    "battery:full": "p:success",
    "git:foreground": "p:idle",
    "git:changed": "p:warning",
    "git:unsynced": "magenta",
    "git:ahead": "p:success",
    "git:behind": "p:primary",
    "session:user": "p:idle",
    "session:root": "p:danger",
    "python:foreground": "#4584b6",
    "node:foreground": "#8cc84b",
    "elixir:foreground": "#422251",
    "go:foreground": "#7FD5EA"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\u250c ",
          "foreground": "p:white"
        },
        {
          "type": "os",
          "style": "plain",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "foreground": "p:os:foreground",
          "properties": {
            "macos": "\uf179 ",
            "ubuntu": "\uf31b "
          }
        },
        {
          "type": "session",
          "style": "plain",
          "template": "{{ if .SSHSession }} {{ end }}{{ .UserName }} ",
          "foreground_templates": [
            "{{ if .Root }}p:session:root{{ else }}p:session:user{{ end }}"
          ]
        },
        {
          "type": "path",
          "style": "plain",
          "template": "{{ .Path }}",
          "foreground": "p:path:foreground",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:git:changed{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git:unsynced{{ end }}",
            "{{ if gt .Ahead 0 }}p:git:ahead{{ end }}",
            "{{ if gt .Behind 0 }}p:git:behind{{ end }}"
          ],
          "foreground": "p:git:foreground",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "full_branch_path": true
          }
        }
      ]
    },
    {
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:node:foreground",
          "template": " \ue718 {{ .Full }} "
        },
        {
          "type": "elixir",
          "style": "plain",
          "foreground": "p:eleixir:foreground",
          "template": "  {{ .Full }} "
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "p:python:foreground",
          "template": " \ue235{{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }} {{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "files"
          }
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "p:battery:foreground",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}p:battery:charging{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:battery:discharging{{end}}",
            "{{if eq \"Full\" .State.String}}p:battery:full{{end}}"
          ],
          "template": "{{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }} ",
          "properties": {
            "discharging_icon": " ",
            "charging_icon": " ",
            "charged_icon": " "
          }
        }
      ],
      "type": "prompt"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\u2514 ",
          "foreground": "p:white"
        },
        {
          "type": "text",
          "style": "plain",
          "template": "\u276f",
          "foreground": "p:prompt:foreground"
        }
      ],
      "newline": true
    }
  ]
}